<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_gravity="center_horizontal"
    android:padding="15dp"
    android:orientation="horizontal"
    android:background="@drawable/design_big_textbox"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/white"
        android:layout_gravity="center"/>
    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/white"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:text="Nombre del Usuario"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/bluemarin"/>
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="25dp"
                android:background="@drawable/done_icon"
                android:layout_height="25dp"/>
            </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/calendar_icon"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/01/2025"
                android:textColor="@color/bluemarin"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/time_icon"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9 horas"
                android:textColor="@color/bluemarin"/>
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/stars_icon"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="3,4"
                android:textColor="@color/bluemarin"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
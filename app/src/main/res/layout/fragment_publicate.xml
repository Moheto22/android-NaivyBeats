<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.menu.FragmentPublicate"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/create_offer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="@string/title_publicaction_offer_eng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/bluemarin"/>
        <ImageView
            android:layout_width="300dp"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:background="@color/bluemarin"/>
        <ImageView
            android:layout_width="300dp"
            android:layout_marginTop="5dp"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:background="@color/bluemarin"/>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="55dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bluemarin"
                    android:text="@string/salary_new_offer_eng"
                    android:textSize="25dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bluemarin"
                    android:text="@string/date_new_offer_eng"
                    android:textSize="25dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bluemarin"
                    android:text="@string/houres_eng"
                    android:textSize="25dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/salary"
                    android:layout_width="190dp"
                    android:layout_height="35dp"
                    android:background="@drawable/design_textbox"
                    android:maxLines="1"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:layout_marginLeft="11dp"
                    android:textColor="@color/bluemarin"
                    />
                <Button
                    android:id="@+id/btnDate"
                    android:layout_width="190dp"
                    android:layout_height="35dp"
                    android:textAlignment="center"
                    app:backgroundTint="@null"
                    android:background="@drawable/design_textbox"
                    android:textColor="@color/bluemarin"
                    android:textSize="14sp"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="11dp"
                    android:paddingLeft="20dp"
                    android:focusable="false"
                    android:clickable="true"
                />
                <EditText
                    android:id="@+id/houres"
                    android:layout_width="190dp"
                    android:layout_height="35dp"
                    android:inputType="number"
                    android:layout_marginTop="7dp"
                    android:textAlignment="center"
                    android:background="@drawable/design_textbox"
                    android:maxLines="1"
                    android:layout_marginLeft="11dp"
                    android:textColor="@color/bluemarin"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:text="@string/styles_new_offer_eng"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/bluemarin"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/hiphop"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="11dp"
                android:textSize="11dp"
                app:backgroundTint="@null"
                android:background="@drawable/design_button_type_choose_not_pressed"
                android:text="@string/button_hiphop_eng"
                android:padding="0dp"
                android:textColor="@color/bluemarin"/>
            <Button
                android:id="@+id/pop"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="11dp"
                app:backgroundTint="@null"
                android:textSize="11dp"
                android:background="@drawable/design_button_type_choose_not_pressed"
                android:text="@string/button_pop_eng"
                android:padding="0dp"
                android:textColor="@color/bluemarin"/>

            <Button
                android:id="@+id/tecno"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:textSize="11dp"
                android:layout_marginHorizontal="11dp"
                app:backgroundTint="@null"
                android:background="@drawable/design_button_type_choose_not_pressed"
                android:text="@string/button_tecno_eng"
                android:padding="0dp"
                android:textColor="@color/bluemarin"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <Button
                android:id="@+id/classic"
                android:layout_width="65dp"
                android:textSize="11dp"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                app:backgroundTint="@null"
                android:background="@drawable/design_button_type_choose_not_pressed"
                android:text="@string/button_clasic_eng"
                android:padding="0dp"
                android:textColor="@color/bluemarin"/>
            <Button
                android:id="@+id/flamenco"
                android:textSize="11dp"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                app:backgroundTint="@null"
                android:background="@drawable/design_button_type_choose_not_pressed"
                android:text="@string/button_flamenco_eng"
                android:padding="0dp"
                android:textColor="@color/bluemarin"/>
            <Button
                android:id="@+id/reggueton"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:textSize="11dp"
                android:layout_margin="8dp"
                app:backgroundTint="@null"
                android:background="@drawable/design_button_type_choose_not_pressed"
                android:text="@string/button_reggueton_eng"
                android:padding="0dp"
                android:textColor="@color/bluemarin"/>
            <Button
                android:id="@+id/rock"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:textSize="11dp"
                android:layout_margin="8dp"
                app:backgroundTint="@null"
                android:background="@drawable/design_button_type_choose_not_pressed"
                android:text="@string/button_rock_eng"
                android:padding="0dp"
                android:textColor="@color/bluemarin"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <Button
                android:id="@+id/blues"
                android:textSize="11dp"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="11dp"
                app:backgroundTint="@null"
                android:background="@drawable/design_button_type_choose_not_pressed"
                android:text="@string/button_blues_eng"
                android:padding="0dp"
                android:textColor="@color/bluemarin"/>
            <Button
                android:id="@+id/jazz"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="11dp"
                app:backgroundTint="@null"
                android:textSize="11dp"
                android:background="@drawable/design_button_type_choose_not_pressed"
                android:text="@string/button_jazz_eng"
                android:padding="0dp"
                android:textColor="@color/bluemarin"/>

            <Button
                android:id="@+id/trap"
                android:layout_width="65dp"
                android:textSize="11dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="11dp"
                app:backgroundTint="@null"
                android:background="@drawable/design_button_type_choose_not_pressed"
                android:text="@string/button_trap_eng"
                android:padding="0dp"
                android:textColor="@color/bluemarin"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:text="@string/description_eng"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/bluemarin"/>
        <EditText
            android:id="@+id/description_text"
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/design_big_textbox"
            android:padding="15dp"
            android:textColor="@color/bluemarin"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:lines="4"
            android:maxLines="6"
            android:scrollHorizontally="false"
            android:overScrollMode="always"
            />
        <Button
            android:id="@+id/publicate_offer"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/design_button"
            app:backgroundTint="@null"
            android:textSize="25dp"
            android:textColor="@color/bluemarin"
            android:textStyle="bold"
            android:text="@string/publicate_button_eng"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/create_publication"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/title_publicaction_content_eng"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/bluemarin"/>
        <ImageView
            android:layout_width="300dp"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:background="@color/bluemarin"/>
        <ImageView
            android:layout_width="300dp"
            android:layout_marginTop="5dp"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:background="@color/bluemarin"/>
        <ImageView
            android:id="@+id/image_panel"
            android:scaleType="centerCrop"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/multimedia_element"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="55dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/publication_foto_video_eng"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/bluemarin"/>
            <Button
                android:id="@+id/button_addPhoto"
                app:backgroundTint="@null"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="55dp"
                android:background="@drawable/button_add_publication"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="55dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/publication_title_eng"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/bluemarin"/>
            <EditText
                android:id="@+id/title"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/design_textbox"
                android:maxLines="1"
                android:layout_marginLeft="11dp"
                android:paddingLeft="20dp"
                android:textColor="@color/bluemarin"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="55dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description_eng"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="@color/bluemarin"/>
            <EditText
                android:id="@+id/description"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/design_big_textbox"
                android:paddingLeft="20dp"
                android:textColor="@color/bluemarin"
                />
        </LinearLayout>
        <Button
            android:id="@+id/button_publication"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/design_button"
            app:backgroundTint="@null"
            android:textSize="25dp"
            android:textColor="@color/bluemarin"
            android:textStyle="bold"
            android:text="@string/publicate_button_eng"/>
    </LinearLayout>

</FrameLayout>
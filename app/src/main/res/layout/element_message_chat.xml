<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/panelAccept"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/design_big_textbox"
        android:orientation="vertical"
        android:padding="20dp"
        tools:ignore="RtlCompat"
        android:layout_marginBottom="20dp"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/new_offer_eng"
            android:textColor="@color/bluemarin"
            android:textSize="25dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date_new_offer_eng"
                    android:textColor="@color/bluemarin"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/salary_new_offer_eng"
                    android:textColor="@color/bluemarin"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/date_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/01/2001 00:00"
                    android:textColor="@color/bluemarin"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/salary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20/h"
                    android:textColor="@color/bluemarin"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:textAlignment="gravity">

            <Button
                android:id="@+id/decline"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/design_button"
                android:padding="0dp"
                android:text="@string/decline_eng"
                android:textColor="@color/bluemarin"
                android:textSize="18dp"
                android:textStyle="bold"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/accept"
                android:gravity="end"
                android:textAlignment="center"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="55dp"
                android:background="@drawable/design_button"
                android:padding="0dp"
                android:text="@string/accept_eng"
                android:textColor="@color/bluemarin"
                android:textSize="18dp"
                android:textStyle="bold"
                app:backgroundTint="@null"
                tools:ignore="RtlCompat" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/message_body"
        android:visibility="visible"
        android:layout_width="350dp"
        tools:ignore="RtlCompat"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/element_bluesky"
        android:padding="15dp"
        android:layout_marginBottom="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/avatar"
                app:shapeAppearanceOverlay="@style/CircularImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:background="@color/white">
            </com.google.android.material.imageview.ShapeableImageView>
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="Nombre ususario"
                android:layout_gravity="center"
                android:textColor="@color/bluemarin"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/message_data"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="El sol se oculta lentamente, tiñendo el cielo de naranja y rojo. La brisa fresca acaricia las hojas de los árboles, susurrando historias antiguas. En el horizonte, la luna comienza a asomar, iluminando la oscuridad con su luz suave."
            android:textColor="@color/bluemarin"
            />
        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="10dp"
            android:text="fecha de envio y hora"
            android:textColor="@color/bluemarin"
            />
    </LinearLayout>
</FrameLayout>



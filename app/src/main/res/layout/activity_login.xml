<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/login_light"
    android:layout_weight="18"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageLogo"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:background="@drawable/logo_complet"
                android:layout_gravity="center_horizontal"
                android:layout_margin="60dp"
                >
            </ImageView>

            <EditText
                android:id="@+id/userName"
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/design_textbox"
                android:paddingStart="60dp"
                android:paddingEnd="30dp"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/bluemarin"
                android:textSize="25dp"
                android:hint="@string/user_name_editText_eng"
                android:textColorHint="@color/bluemarin_trans"
                android:imeOptions="actionDone"
                >
            </EditText>
            <EditText
                android:id="@+id/password"
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:textColor="@color/bluemarin"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/design_textbox"
                android:layout_margin="30dp"
                android:paddingStart="60dp"
                android:paddingEnd="30dp"
                android:maxLines="1"
                android:textSize="25dp"
                android:imeOptions="actionDone"
                android:hint="@string/password_editText_eng"
                android:textColorHint="@color/bluemarin_trans"
                android:inputType="textPassword"
                >
            </EditText>
            <Button
                android:id="@+id/buttonContinue"
                android:layout_width="200dp"
                android:textStyle="bold"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="30dp"
                android:background="@drawable/design_button"
                app:backgroundTint="@null"
                android:text="@string/button_continue_eng"
                android:textSize="25dp"
                android:textColor="@color/bluemarin">
            </Button>
            <TextView
                android:id="@+id/notUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/beig"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="@string/text_dont_have_user_eng"
                android:layout_gravity="center_horizontal">
            </TextView>
        </LinearLayout>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="313dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/user_icon">
        </ImageView>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_marginTop="403dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/password_icon">
        </ImageView>
</FrameLayout>
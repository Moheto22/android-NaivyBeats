<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.menu.FragmentChat"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/pantalla_lista_chat"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:text="@string/chat_button_menu_eng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="@color/bluemarin"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="45dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/design_textbox"
            android:padding="10dp">
            <EditText
                android:id="@+id/searcher"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:background="@drawable/design_text_white"
                android:paddingLeft="10dp">
            </EditText>
            <Button
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:background="@drawable/design_button"
                app:backgroundTint="@null"
                android:padding="0dp"
                android:textSize="13dp"
                android:textColor="@color/bluemarin"
                android:textStyle="bold"
                android:text="@string/search_button_menu_eng"/>
        </LinearLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:layout_height="500dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewChats"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/chat_panel"
        android:visibility="invisible"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:background="@color/bluemarin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/avat_user_chat"
                android:layout_marginLeft="10dp"
                android:layout_width="70dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/CircularImage"
                android:layout_height="70dp"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/name_user_chat"
                android:text="Usuario"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/design_button"
                app:backgroundTint="@null"
                android:textSize="15dp"
                android:padding="0dp"
                android:textColor="@color/bluemarin"
                android:textStyle="bold"
                android:text="@string/send_oferr_eng"/>
        </LinearLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            tools:ignore="RtlCompat"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewMessages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="145dp"
                android:clipToPadding="false" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/panelMessage"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bluesky"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_marginBottom="85dp"
        android:padding="10dp">
        <EditText
            android:id="@+id/text"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:background="@drawable/design_text_white"
            android:paddingLeft="10dp">
        </EditText>
        <ImageView
            android:id="@+id/button_send"
            android:layout_width="40dp"
            android:layout_marginLeft="20dp"
            android:layout_height="40dp"
            android:background="@drawable/send_message_icon"/>
    </LinearLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/element_bluesky"
        android:padding="15dp"
        android:orientation="horizontal">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/avatar"
            android:layout_width="70dp"
            app:shapeAppearanceOverlay="@style/CircularImage"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:background="@color/white"/>
        <LinearLayout
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/name_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Usuario"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="@color/bluemarin"/>
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lugar del usuario"
                android:textSize="15dp"
                android:textColor="@color/bluemarin">
            </TextView>
        </LinearLayout>
        <Button
            android:id="@+id/follow"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/follow_eng"
            android:background="@drawable/design_button"
            app:backgroundTint="@null"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/bluemarin"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/image"
        android:layout_width="380dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_height="300dp"
        android:background="@color/beig_trans_plus"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/element_bluesky"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_marginTop="15dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/like"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:background="@drawable/heart_off"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/count_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"
                android:textSize="15dp"
                android:textColor="@color/bluemarin"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                />
            <Button
                android:id="@+id/send_personal_offer"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/send_oferr_eng"
                android:padding="0dp"
                android:background="@drawable/design_button"
                app:backgroundTint="@null"
                android:textSize="14dp"
                android:layout_marginLeft="220dp"
                android:textStyle="bold"
                android:textColor="@color/bluemarin"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/description_eng"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:textColor="@color/bluemarin"
                />
            <TextView
                android:id="@+id/description"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:text="A veces la vida es como un bug en el código. No sabes por qué pasa, pero ahí está. Lo importante es seguir depurando hasta que todo funcione."
                android:textColor="@color/bluemarin"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>